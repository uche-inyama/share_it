<div class="who_to_follow">
    <div class="wtf-and-button">
        <span>Who to follow</span>
    </div>
</div>
<div class="users-wtf">
       <ul>
            <% current_user.random_wtf.each do |random_user| %>
                <li>
                    <div class="text">
                        <%= link_to "#{random_user.fullname}"%>
                    </div>
                </li>
            <% end %>
       </ul>
</div>

